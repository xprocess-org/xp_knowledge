<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="knowledge_package_action" model="ir.actions.act_window">
        <field name="name">Packages</field>
        <field name="res_model">knowledge.package</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="knowledge_package_overview_action" model="ir.actions.act_window">
        <field name="name">Packages Overview</field>
        <field name="res_model">knowledge.package</field>
        <field name="view_mode">kanban</field>
    </record>

    <menuitem id="knowledge_package_menu" name="Packages" action="knowledge_package_action" parent="configuration_menu" sequence="10" />
    <menuitem id="knowledge_package_menu_overview" name="Overview" action="knowledge_package_overview_action" parent="knowledge_menu" sequence="10" />

    <record id="knowledge_package_view_kanban" model="ir.ui.view">
        <field name="name">knowledge.package.kanban.view</field>
        <field name="model">knowledge.package</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <field name="owner_id" />
                <field name="approver_id" />
                <field name="color" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <t t-esc="record.name.value" />
                                </strong>
                                <div t-if="record.owner_id.value">
                                    <t t-esc="record.owner_id.value"/>
                                </div>
                                <div t-if="record.approver_id.value">
                                    <t t-esc="record.approver_id.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="knowledge_package_view_list" model="ir.ui.view">
        <field name="name">knowledge_package_list_view</field>
        <field name="model">knowledge.package</field>
        <field name="arch" type="xml">
            <tree string="Packages">
                <field name="name" />
                <field name="owner_id" />
                <field name="approver_id" />
            </tree>
        </field>
    </record>

    <record id="knowledge_package_view_form" model="ir.ui.view">
        <field name="name">knowledge_package_form_view</field>
        <field name="model">knowledge.package</field>
        <field name="arch" type="xml">
            <form string="Package">
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" class="text-truncate" placeholder="Package Title..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="owner_id" />
                            <field name="approver_id" />
                        </group>
                        <group>
                            <field name="visibility" widget="radio" />
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" />
                        </page>
                        <page name="documents" string="Documents">
                            <field name="document_ids" />
                        </page>
                        <page name="requests" string="Change Requests">
                            <field name="request_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>