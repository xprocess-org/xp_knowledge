<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="knowledge_section_action" model="ir.actions.act_window">
        <field name="name">Sections</field>
        <field name="res_model">knowledge.section</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="knowledge_section_menu" name="Sections" action="knowledge_section_action" parent="configuration_menu" sequence="30" />

    <record id="knowledge_section_view_list" model="ir.ui.view">
        <field name="name">knowledge_section_list_view</field>
        <field name="model">knowledge.section</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="write_uid" />
                <field name="write_date" />
            </tree>
        </field>
    </record>

</odoo>