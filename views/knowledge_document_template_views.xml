<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="knowledge_document_template_action" model="ir.actions.act_window">
        <field name="name">Document Templates</field>
        <field name="res_model">knowledge.document.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="knowledge_document_template_menu" name="Document Templates" action="knowledge_document_template_action" parent="configuration_menu" sequence="60" />

    <record id="knowledge_document_template_view_list" model="ir.ui.view">
        <field name="name">knowledge_document_template_list_view</field>
        <field name="model">knowledge.document.template</field>
        <field name="arch" type="xml">
            <tree string="Document Template">
                <field name="name" />
                <field name="create_uid" />
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <record id="knowledge_document_template_view_form" model="ir.ui.view">
        <field name="name">knowledge_document_template_form_view</field>
        <field name="model">knowledge.document.template</field>
        <field name="arch" type="xml">
            <form string="Document Template">
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" class="text-truncate" placeholder="Document Template Title..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="create_uid" />
                        <field name="create_date" />
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>