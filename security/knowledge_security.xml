<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">

        <record id="module_xp_knowledge_category" model="ir.module.category">
            <field name="name">Knowledge</field>
        </record>

        <record id="group_xp_knowledge_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_xp_knowledge_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_xp_knowledge_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_xp_knowledge_category"/>
            <field name="implied_ids" eval="[(4, ref('group_xp_knowledge_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>

</odoo>